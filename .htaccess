# ---------------------------------------
# | Allows RESTful Database to work     |
# ---------------------------------------
<IfModule mod_rewrite.c>
	RewriteEngine	On
	RewriteBase 	/
	RewriteCond		%{REQUEST_FILENAME}	!-f
	RewriteCond		%{REQUEST_FILENAME}	!-d
	RewriteRule		^(.*)$ index.php/$1	[L,QSA]
</IfModule>